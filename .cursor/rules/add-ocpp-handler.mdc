    # Update status
    return call_result.StatusNotification()

# Heartbeat - keepalive
@on("Heartbeat")
async def on_heartbeat(self, **kwargs):
    # Update connection status
    return call_result.Heartbeat(...)

# Transaction event - main data source
@on("TransactionEvent")
