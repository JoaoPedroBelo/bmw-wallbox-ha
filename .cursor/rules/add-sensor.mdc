self._attr_native_unit_of_measurement = UnitOfPower.WATT

# Energy
self._attr_device_class = SensorDeviceClass.ENERGY
self._attr_native_unit_of_measurement = UnitOfEnergy.KILO_WATT_HOUR

# Current
